<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECO2.Plantas_Menu">
    <ContentPage.Content>
        <Frame 
       HeightRequest="600"
       WidthRequest="150">
            <Label Text="Plantas" TextColor="White" TextTransform="Uppercase" FontSize="45" FontAttributes="Bold" Margin="64 0 0 0"/>
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#90D950" Offset="0.1"/>
                    <GradientStop Color="#72AA42" Offset="1.0"/>
                    <GradientStop Color="#72AA42" Offset="0.2"/>
                </LinearGradientBrush>
            </Frame.Background>
        </Frame>

    </ContentPage.Content>
</ContentPage>